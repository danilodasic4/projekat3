<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
    /* Yellow background for the page */
    body {
        background-color: #fff3b3; /* Light yellow background */
    }

    /* Black navbar background */
    .navbar {
        background-color: #000 !important; /* Black navbar */
    }

    /* Yellow text color for navbar links */
    .navbar .nav-link {
        color: #f8c200 !important; /* Yellow text */
    }

    .navbar .nav-link:hover {
        color: #ffcc00 !important; /* Lighter yellow on hover */
    }

    /* Active link styles */
    .active-link {
        font-weight: bold;
        color: #ffcc00 !important; /* Light yellow when active */
    }

    .active-link:hover {
        color: #ffcc00; /* Lighter yellow on hover for active link */
        text-decoration: underline;
    }

    /* Optional: Change the color of the brand logo to yellow */
    .navbar-brand {
        color: #f8c200 !important; /* Yellow brand logo */
    }

    .navbar-brand:hover {
        color: #ffcc00; /* Lighter yellow on hover */
    }
    </style>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin Panel{% endblock %}</title>

    {% block stylesheets %}
    {% endblock %}

</head>
<body>

    <div class="container">
        <!-- Admin Navigation bar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
            <a class="navbar-brand" href="{{ path('admin_index') }}">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'admin_index' %}active-link{% endif %}" href="{{ path('admin_index') }}">Home</a>
                    </li>

                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'admin_cars' %}active-link{% endif %}" href="{{ path('admin_cars') }}">Cars</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'admin_appointments_upcoming' %}active-link{% endif %}" href="{{ path('admin_appointments_upcoming') }}">Upcoming Appointments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'admin_appointments_archived' %}active-link{% endif %}" href="{{ path('admin_appointments_archived') }}">Archived Appointments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'admin_users' %}active-link{% endif %}" href="{{ path('admin_users') }}">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'admin_logout' %}active-link{% endif %}" href="{{ path('admin_logout') }}">Logout</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>

        {% block body %}{% endblock %}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

    {% block javascripts %}
    {% endblock %}

</body>
</html>
