<!DOCTYPE html>
<html>
<head>
    <title>All Appointments</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    {% include 'admin/base.html.twig' %}

    <div class="container mt-4">
        <h1 class="my-4">All Appointments</h1>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Car</th>
                    <th>User</th>
                    <th>Scheduled At</th>
                    <th>Appointment Type</th>
                </tr>
            </thead>
            <tbody>
                {% for appointment in appointments %}
                <tr>
                    <td>
                        <a href="{{ path('app_car_show', {id: appointment.car.id}) }}">
                            {{ appointment.car.brand }} - {{ appointment.car.model }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('admin_users', {id: appointment.user.id}) }}">
                            {{ appointment.user.email }}
                        </a>
                    </td>
                    <td>{{ appointment.scheduledAt|date('Y-m-d H:i') }}</td>
                    <td>{{ appointment.appointmentType }}</td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5">There are no appointments available.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('admin_index') }}" class="btn btn-secondary mb-3">Back to Dashboard</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
