<!DOCTYPE html>
<html>
<head>
    <title>List of Cars</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    {% include 'base.html.twig' %}
    
    <div class="container mt-4">
        <h1>List of Cars</h1>
        <a href="{{ path('app_cars_expiring_registration') }}" class="btn btn-info mb-3">View Cars with Expiring Registration</a>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Year</th>
                    <th>Color</th>
                    <th>Actions</th>
                    <th>Registration Cost</th>
                </tr>
            </thead>
            <tbody>
                {% for car in cars %}
                <tr>
                    <td>{{ car.brand }}</td>
                    <td>{{ car.model }}</td>
                    <td>{{ car.year }}</td>
                    <td>{{ car.color }}</td>
                    <td>
                        <a href="{{ path('app_car_show', { id: car.id }) }}" class="btn btn-info btn-sm">View</a>
                        <a href="{{ path('app_car_edit', { id: car.id }) }}" class="btn btn-warning btn-sm">Edit</a>
                        <form action="{{ path('app_car_delete', { id: car.id }) }}" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this car?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                    <td>
                        <a href="{{ path('app_car_registration_details', { id: car.id }) }}" class="btn btn-info btn-sm">See Registration Cost</a>
                    </td>
                    <td>
                        <!-- Link to schedule an appointment for the car -->
                        <a href="{{ path('car_create_appointment', { id: car.id }) }}" class="btn btn-primary btn-sm">Schedule Appointment</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6">No cars available.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_car_new') }}" class="btn btn-primary">Create a new car</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
